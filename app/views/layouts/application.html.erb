<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="p-5 text-centered">
      <p class="title has-text-centered">Title!</p>
    </div>

    <nav class="navbar">
      <% if current_user %>
        <div class="navbar-item"><%= link_to "All events", events_path %></div>
        <div class="navbar-item"><%= link_to "Home", user_path(session[:id]) %></div>
        <div class="navbar-item"><%= link_to "Sign out", logout_path, method: :delete %></div>
      <% else %>
        <div class="navbar-item is-size-4"><%= link_to "All events", events_path %></div>
        <div class="navbar-item is-size-4"><%= link_to "Sign up", new_user_path %></div>
        <div class="navbar-item is-size-4"><%= link_to "Sign in", login_path %></div>
      <% end %>
    </nav>

    <% flash.each do |type, msg| %>
      <div>
        <%= msg %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
