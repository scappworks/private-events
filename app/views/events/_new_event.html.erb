<%= form_with model: @event do |f| %>
    <%= f.label :event_name %><br>
    <%= f.text_field :event_name %> <br><br>

    <%= f.label :event_date %><br>
    <%= f.text_field :event_date %><br><br>

    <%= f.label :event_description %><br>
    <%= f.text_area :event_description %><br><br>

    <%= f.submit "Create event", :class => "button is-link" %>
<% end %>