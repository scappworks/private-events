<h1>Events Index Page</h1>

<% if current_user %>
    <h2>Signed in as <%= current_user.username %></h2>
<% end %>

<h2>Upcoming Events</h2>
<div>
    <% @events.upcoming.each do |e| %>
        <%= link_to event_path(e) do %>
            <div>
                <%= e.event_name %><br>
                <%= e.event_description %><br>
                <%= e.creator.username %>
            </div>
        <% end %>
        <br>
    <% end %>
</div>

<h2>Past Events</h2>
<div>
    <% @events.past.each do |e| %>
        <%= link_to event_path(e) do %>
            <div>
                <%= e.event_name %><br>
                <%= e.event_description %><br>
                <%= e.creator.username %><br><br>
            </div>
        <% end %>
        <br>
    <% end %>
</div>