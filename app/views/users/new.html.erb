<div class="container has-text-centered">
    <h2 class="title is-size-3 p-5">Sign up</h2>

    <%= form_with model: @user do |f| %>
        <%= f.label :name %>
        <br>
        <%= f.text_field :name %>
        <br>
        <br>
        <%= f.label :username %>
        <br>
        <%= f.text_field :username %>
        <br>
        <br>
        <%= f.label :email %>
        <br>
        <%= f.text_field :email %>
        <br>
        <br>
        <%= f.label :password %>
        <br>
        <%= f.text_field :password %>
        <br>
        <br>
        <%= f.submit :class => "button is-link" %>
    <% end %>
</div>