<h1>This is the new viewer page!</h1>

<%= form_with model: @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :username %>
    <%= f.text_field :username %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :password %>
    <%= f.text_field :password %>

    <%= f.submit %>
<% end %>

<%= form_for @user, method: :post do |f| %>
    <%= f.label :id %>
    <%= f.text_field :id %>
    <%= f.submit "Sign in" %>
<% end %>